<Window x:Class="WpfProductPhotoManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfProductPhotoManager"
        mc:Ignorable="d"
        Title="产品照片管理器 v1.0" Height="600" Width="1000"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <TextBlock Text="请框选并拖动对应一组图片文件到下面方框" Style="{DynamicResource MaterialDesignCaptionTextBlock}"
                       Margin="5"/>
                <DataGrid Style="{DynamicResource MaterialDesignDataGrid}" AllowDrop="True" Drop="DataGrid_Drop"
                    Grid.Row="1" Name="DgInputs" IsReadOnly="True" AutoGenerateColumns="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="原始文件名称" Binding="{Binding DisplayFileName}"/>
                        <DataGridTextColumn Header="创建时间" Binding="{Binding CreatedTime}"/>
                        <DataGridCheckBoxColumn Header="已复制" Binding="{Binding IsCopied}"/>
                        <DataGridTextColumn Header="复制结果" Binding="{Binding CopyError}"/>
                        <DataGridTextColumn Header="新文件名称" Binding="{Binding NewFileName}"/>
                        <DataGridCheckBoxColumn Header="已上传" Binding="{Binding IsUploaded}"/>
                        <DataGridTextColumn Header="上传结果" Binding="{Binding UploadError}"/>
                    </DataGrid.Columns>
                </DataGrid>
                <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="5">
                    <Button Style="{DynamicResource MaterialDesignOutlinedButton}" Content="输出目录"/>
                    <TextBlock Style="{DynamicResource MaterialDesignBody1TextBlock}" Text="OutputPath"
                               Margin="5 0 0 0" Name="TxtOutputPath"/>
                </StackPanel>
            </Grid>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <Button Content="产品ID扫描输入" Grid.Row="0" Style="{DynamicResource MaterialDesignOutlinedLightButton}" 
                    Margin="5"/>
            <Button Content="导入PMS最近30天的ID" Grid.Row="1" Style="{DynamicResource MaterialDesignOutlinedLightButton}" 
                    Margin="5"/>
            <Border Margin="5" BorderBrush="Gray" BorderThickness="1" Grid.Row="2">
                <ListBox Style="{StaticResource MaterialDesignListBox}">
                    <ListBoxItem>Test Data</ListBoxItem>
                    <ListBoxItem>Test Data</ListBoxItem>
                    <ListBoxItem>Test Data</ListBoxItem>
                    <ListBoxItem>Test Data</ListBoxItem>
                    <ListBoxItem>Test Data</ListBoxItem>
                    <ListBoxItem>Test Data</ListBoxItem>
                    <ListBoxItem>Test Data</ListBoxItem>
                    <ListBoxItem>Test Data</ListBoxItem>
                </ListBox>
            </Border>
            <ComboBox Grid.Row="3" IsEditable="True" Style="{DynamicResource MaterialDesignComboBox}" Margin="5">
                <ComboBoxItem>Hello</ComboBoxItem>
                <ComboBoxItem>Hello</ComboBoxItem>
                <ComboBoxItem>Hello</ComboBoxItem>
                <ComboBoxItem>Hello</ComboBoxItem>
            </ComboBox>
            <ComboBox Grid.Row="4" IsEditable="True" Style="{DynamicResource MaterialDesignComboBox}" Margin="5">
                <ComboBoxItem>Hello</ComboBoxItem>
                <ComboBoxItem>Hello</ComboBoxItem>
                <ComboBoxItem>Hello</ComboBoxItem>
                <ComboBoxItem>Hello</ComboBoxItem>
            </ComboBox>
            <TextBlock Grid.Row="5" Text="新名称内容" Style="{DynamicResource MaterialDesignBody1TextBlock}"
                       Margin="5"/>
            <Button Content="复制并重命名" Grid.Row="6" Style="{DynamicResource MaterialDesignOutlinedLightButton}"
                    Margin="5"/>
            <Button Content="上传到FTP服务器" Grid.Row="7" Style="{DynamicResource MaterialDesignOutlinedLightButton}"
                    Margin="5"/>
        </Grid>
    </Grid>
</Window>
