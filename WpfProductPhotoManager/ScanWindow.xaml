<Window x:Class="WpfProductPhotoManager.ScanWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfProductPhotoManager"
        mc:Ignorable="d"
        Title="ID扫描窗口" Height="450" Width="400"
        WindowStartupLocation="CenterScreen" WindowStyle="ToolWindow">
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <TextBox Style="{DynamicResource MaterialDesignFilledTextBox}"
                 Name="TxtProductID" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>
        <Button Content="输入" Style="{DynamicResource MaterialDesignOutlinedDarkButton}" Grid.Row="1" Margin="5"
                Name="BtnOK" Click="BtnOK_Click"/>
    </Grid>
</Window>
